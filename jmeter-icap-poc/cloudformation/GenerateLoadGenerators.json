            "AllowedValues" : [ "m1.small","t1.micro","t2.micro","t2.small","t3.medium","m3.medium","m3.large","m3.xlarge","m3.2xlarge","m4.2xlarge","c4.2xlarge","c3.xlarge","c4.xlarge","c3.4xlarge","c3.8xlarge","g2.2xlarge","r3.large","r3.xlarge","r3.2xlarge","r3.4xlarge","r3.8xlarge","i2.xlarge","i2.2xlarge","i2.4xlarge","i2.8xlarge","hs1.8xlarge"],
            "ConstraintDescription" : "must be a valid EC2 instance type."
        },
        "InstanceSecurityGroup":{
            "Type":"String",
            "Default" : "sg-0c82ddcb24373c694"
        },
        "MinInstances": {
            "Type": "Number",
            "Default": 1
        },
        "MaxInstances": {
            "Type": "Number",
            "Default": 1
        },
        "ImageId": {
            "Type": "String",
            "Default": ""
        },
        "KeyName": {
            "Type": "String",
            "Default": ""
        },
        "SecurtiyGroupId": {
            "Type": "String",
            "Default": ""
        },
        "Ec2Name": {
            "Type": "String",
            "Default": ""
        }
    },
    "Resources" : {
        "LaunchConfig" : {
            "Type" : "AWS::AutoScaling::LaunchConfiguration",
            "Properties" : {
                "ImageId" : { "Ref" : "AmiImage" },
                "SecurityGroups" :   [
                    {
                        "Ref":"InstanceSecurityGroup"
                    }
                ],
                "InstanceType" : { "Ref" : "InstanceType" },
                "SpotPrice" : "0.80",
                "KeyName" : { "Ref" : "KeyPairName" },
                "AssociatePublicIpAddress" : "true"
            }
        },
        "ServerGroup" : {
            "Type" : "AWS::AutoScaling::AutoScalingGroup",
            "Properties" : {
                "LaunchConfigurationName" : { "Ref" : "LaunchConfig" },
                "MinSize" : { "Ref" : "MinInstances" },
                "MaxSize" : { "Ref" : "MaxInstances" },
                "VPCZoneIdentifier" : { "Ref" : "SubnetIds" },
                "Tags" : [ 
                    {
                        "Key": "Description",
                        "Value": " Autoscaling group",
                        "Key": "Name",
                        "Value": { "Ref" : "AsgName" },
                        "PropagateAtLaunch" : "true"
                    }
                ]
            },
            "UpdatePolicy" : {
                "AutoScalingScheduledAction" : {
                    "IgnoreUnmodifiedGroupSizeProperties" : "true"
                },
                "AutoScalingRollingUpdate" : {
                    "MinInstancesInService" : "0",
                    "MaxBatchSize" : "1",
                    "WaitOnResourceSignals" : "false",
                    "PauseTime" : "PT1M"
                }
            }
        },
        "Ec2IamRole" : {
            "Type" : "AWS::IAM::Role",
            "Properties" : {
                "RoleName" : "Ec2-Role",
                "AssumeRolePolicyDocument" : {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/",
                "Description" : "EC2 IAM Role",
                "Policies": [
                    {
                        "PolicyName": "Ec2-Policy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "ec2:*"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "Ec2Instance": {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "ImageId" : {"Ref" : "ImageId"},
                "InstanceType" : "t2.micro",
                "KeyName" : {"Ref" : "KeyName"},
                "SecurityGroupIds" : [{"Ref" : "SecurtiyGroupId"}],
                "Tags" : [
                    {
                        "Key": "Name",
                        "Value": {"Ref" : "Ec2Name"}
                    }
                ],
                "IamInstanceProfile": {
                    "Ref": "Ec2InstanceProfile"
                }
            }
        },
        "Ec2InstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
               "Path": "/",
               "Roles": [{ "Ref": "Ec2IamRole" }]
            }
        }
    },
    "Outputs" : {

    }
}
